{
    "name": "Spam Detection",
    "version": "1.0",
    "manifest_version": 2,
    "icons": {"128": "images/logo.png"},
    "browser_action": {
        "default_popup": "popup.html",
        "default_title": "Spam Detection", 
        "default_icon": "images/logo.png",
        "default_script": "scripts/popup.js"
    },
    "permissions": [
        "tabs", 
        "https://www.google.com/*"
    ], 
    "background": {
        "scripts": ["scripts/background.js"]
    }
}